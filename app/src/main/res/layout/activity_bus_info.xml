<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".BusInfoActivity">
    <LinearLayout
        android:id="@+id/layoutBusBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/box_busstop"
        >
        <TextView
            android:id="@+id/tvBusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="999"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:paddingTop="25sp"
            android:fontFamily="@font/nanumbarungothic"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDirUp"
                android:textSize="15sp"
                android:text="기점"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:paddingRight="5sp"
                android:fontFamily="@font/nanumbarungothic"/>
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/icon64_double_arrow"/>
            <TextView
                android:id="@+id/tvDirDown"
                android:textSize="15sp"
                android:text="종점"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:paddingLeft="5sp"
                android:fontFamily="@font/nanumbarungothic"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvDirPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Dir pass"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/nanumbarungothic"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBusStop"
        android:layout_below="@+id/layoutBusBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:scrollbars="vertical"
        />

</RelativeLayout>